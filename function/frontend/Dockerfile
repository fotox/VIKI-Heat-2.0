# function/frontend/Dockerfile

# 1. Abh채ngigkeiten installieren
FROM node:18-slim AS deps
WORKDIR /app
# Nur package.json & package-lock kopieren f체r deterministische install
COPY package.json package-lock.json ./
# CI-Install f체r exakte Reproduzierbarkeit
RUN npm ci

# 2. Quellcode kopieren und (Dev-)Server starten
FROM node:18-slim AS dev
WORKDIR /app
# node_modules aus deps 체bernehmen
COPY --from=deps /app/node_modules ./node_modules
# Restlichen Code kopieren (inkl. index.html, src/, components/ui/)
COPY . .
# Dev-Server starten
CMD ["npm", "run", "dev"]
